# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/video-platform

# JWT
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRE=24h

# Frontend URL (for CORS)
